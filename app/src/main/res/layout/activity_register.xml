<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/zzzz"
    android:orientation="vertical"
    tools:context="com.yhl.demoother.activity.RegisterActivity">

    <EditText
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
        android:id="@+id/et_Newname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="账户名"
        android:lines="1"
        android:maxLength="16" />

    <EditText
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
        android:id="@+id/et_Newpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16" />

    <Button
        android:id="@+id/btn_resg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_btn_login_selected"
        android:onClick="onRegist"
        android:text="注册"
        android:textColor="#37bc9b"
        android:textSize="16sp" />
</LinearLayout>
